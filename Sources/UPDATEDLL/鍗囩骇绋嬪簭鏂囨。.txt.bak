	FileType=Engine         //文件类型标志
	UpdateRelative=0        //需要优先更新的标志
	Belong=55               //所属的组件的标志
	NeedDownload=1          //必须下载的标志，如果该值为1，则如果该文件下载失
                                  败，则不更新所有已经下载的文件
        SNMask=                 //需要验证的序列号头
        Comment=                //修正说明信息或者其他的提示信息
